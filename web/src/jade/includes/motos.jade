- var motosNames = ['До 700 куб.см', 'От 700 до 1400 куб.см', 'От 1400 куб.см', 'Большие мотоциклы GoldWing и аналоги'];
- var motosPrices = [1200, 1400, 1600, 1800];
- var motosImages = [1200, 1300, 1400, 1500];

div(class='motos__container')
    each moto, index in motosNames
        div(class='motos__box')
            span(class='motos__box-name')=moto
            span(class='motos__box-price') #{motosPrices[index]} р/мес
            div(class='motos__box-picture' style='background-image:url(img/images/moto-#{motosImages[index]}.png)')